<%- include('partials/header', { title: 'Add Item' }) %>
<body>
  <h2>Add a New Shopping List Item</h2>

  <form action="/addItem" method="POST">
    <label for="txtItem">Item Name:</label>
    <input type="text" id="txtItem" name="txtItem" required><br><br>

    <label for="selSection">Section:</label>
    <select id="selSection" name="selSection" required>
      <option value="drinks">Drinks</option>
      <option value="produce">Produce</option>
      <option value="dairy">Dairy</option>
      <option value="bakery">Bakery</option>
    </select><br><br>

    <label for="numPrice">Price:</label>
    <input type="number" id="numPrice" name="numPrice" step="0.01" required><br><br>

    <label for="chkCoupon">
      <input type="checkbox" id="chkCoupon" name="chkCoupon" value="true">
      Coupon Available
    </label><br><br>

    <button type="submit">Add Item</button>
  </form>
</body>
</html>
